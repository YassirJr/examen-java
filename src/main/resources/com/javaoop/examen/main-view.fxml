<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.javaoop.examen.controllers.MainController"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <MenuBar>
            <Menu text="Gestion">
                <MenuItem text="Users" onAction="#showUsers"/>
                <MenuItem text="Départements" onAction="#showDepartements"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <TabPane fx:id="mainTabPane">
            <Tab text="Professeurs" closable="false">
                <fx:include source="user-table.fxml"/>
            </Tab>
            <Tab text="Départements" closable="false">
                <fx:include source="user-table.fxml"/>
            </Tab>
        </TabPane>
    </center>

</BorderPane>